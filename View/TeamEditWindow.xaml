<Window x:Class="Work.View.TeamEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Work.View"
        mc:Ignorable="d"
        Title="TeamEditWindow" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Basic Info -->
        <Label Grid.Row="0" Grid.Column="0" Content="Team Name:"/>
        <TextBox Grid.Row="1" Grid.Column="0" Name="NameTextBox" Margin="0,0,0,10"/>

        <Label Grid.Row="0" Grid.Column="1" Content="City:"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="CityTextBox" Margin="0,0,0,10"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Coach Name:"/>
        <TextBox Grid.Row="3" Grid.Column="0" Name="CoachNameTextBox" Margin="0,0,0,10"/>

        <Label Grid.Row="2" Grid.Column="1" Content="Coach Contact:"/>
        <TextBox Grid.Row="3" Grid.Column="1" Name="CoachContactTextBox" Margin="0,0,0,10"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Assigned Hotel:"/>
        <ComboBox Grid.Row="5" Grid.Column="0" Name="HotelComboBox" Margin="0,0,0,20"
                  DisplayMemberPath="Name"
                  SelectedValuePath="HotelId"
                  SelectedValue="{Binding HotelId}"/>

        <!-- Tab Control for Related Data -->
        <TabControl Grid.Row="6" Grid.ColumnSpan="2" Margin="0,10,0,0">
            <TabItem Header="Players">
                <DataGrid Name="PlayersDataGrid" Margin="5" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Jersey" Binding="{Binding JerseyNumber}"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                        <DataGridTextColumn Header="Position" Binding="{Binding Position}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Staff">
                <DataGrid Name="StaffDataGrid" Margin="5" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                        <DataGridTextColumn Header="Role" Binding="{Binding Role}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Matches">
                <DataGrid Name="MatchesDataGrid" Margin="5" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding MatchDate, StringFormat={}{0:dd.MM.yyyy}}"/>
                        <DataGridTextColumn Header="Opponent" Binding="{Binding ., Converter={StaticResource OpponentConverter}}"/>
                        <DataGridTextColumn Header="Score" Binding="{Binding ., Converter={StaticResource TeamScoreConverter}}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="5" Click="OkButton_Click"  IsDefault="True"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="CancelButton_Click"  IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
