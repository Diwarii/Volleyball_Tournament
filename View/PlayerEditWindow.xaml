<Window x:Class="Work.View.PlayerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Work.View"
        mc:Ignorable="d"
        Title="PlayerEditWindow" Height="450" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Player Information -->
        <Label Grid.Row="0" Content="Full Name:"/>
        <TextBox Grid.Row="1" Name="FullNameTextBox" Margin="0,0,0,10"/>

        <Label Grid.Row="2" Content="Team:"/>
        <ComboBox Grid.Row="3" Name="TeamComboBox" Margin="0,0,0,10"
                  DisplayMemberPath="Name"
                  SelectedValuePath="TeamId"
                  SelectedValue="{Binding TeamId}"/>

        <Label Grid.Row="4" Content="Birth Date:"/>
        <DatePicker Grid.Row="5" Name="BirthDatePicker" Margin="0,0,0,10"/>

        <Label Grid.Row="6" Content="Position:"/>
        <ComboBox Grid.Row="7" Name="PositionComboBox" Margin="0,0,0,10" ItemsSource="{Binding Source={local:PositionValues}}" SelectedItem="{Binding Position}"/>

        <!-- Player Stats -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <StackPanel Margin="0,0,10,0">
                <Label Content="Jersey Number:"/>
                <TextBox Name="JerseyNumberTextBox" Margin="0,0,0,10"/>
            </StackPanel>
            <StackPanel Margin="10,0,10,0">
                <Label Content="Height (cm):"/>
                <TextBox Name="HeightTextBox" Margin="0,0,0,10"/>
            </StackPanel>
            <StackPanel Margin="10,0,0,0">
                <Label Content="Weight (kg):"/>
                <TextBox Name="WeightTextBox" Margin="0,0,0,10"/>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="5" Click="OkButton_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
