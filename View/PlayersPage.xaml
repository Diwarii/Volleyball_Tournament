<Page x:Class="Work.View.PlayersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Work.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayersPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Players" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

        <DataGrid Grid.Row="1" Name="PlayersDataGrid" AutoGenerateColumns="False" Margin="10" 
                  CanUserAddRows="False" SelectionChanged="PlayersDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Jersey" Binding="{Binding JerseyNumber}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Team" Binding="{Binding Team.Name}" Width="Auto"/>
                <DataGridTextColumn Header="Position" Binding="{Binding Position}" Width="Auto"/>
                <DataGridTextColumn Header="Age" Binding="{Binding BirthDate, Converter={StaticResource AgeConverter}}" Width="Auto"/>
                <DataGridTextColumn Header="Height" Binding="{Binding Height}" Width="Auto"/>
                <DataGridTextColumn Header="Weight" Binding="{Binding Weight}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Add" Width="80" Height="30" Margin="5" Click="AddButton_Click"/>
            <Button Content="Edit" Width="80" Height="30" Margin="5" Click="EditButton_Click"/>
            <Button Content="Delete" Width="80" Height="30" Margin="5" Click="DeleteButton_Click"/>
            <Button Content="View Details" Width="100" Height="30" Margin="5" Click="DetailsButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
