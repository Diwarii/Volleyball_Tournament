<Window x:Class="Work.View.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Work.View"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="350" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Логин:" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="LoginTextBox" Grid.Row="1" Height="25"/>

        <TextBlock Text="Пароль:" Grid.Row="2" Margin="0,10,0,5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" Height="25"/>

        <TextBlock Text="Имя:" Grid.Row="4" Margin="0,10,0,5"/>
        <TextBox x:Name="NameTextBox" Grid.Row="5" Height="25"/>

        <TextBlock Text="Возраст:" Grid.Row="6" Margin="0,10,0,5"/>
        <TextBox x:Name="AgeTextBox" Grid.Row="7" Height="25"/>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Зарегистрироваться" Width="130" Margin="5" Click="RegisterButton_Click"/>
            <Button Content="Отмена" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
